@model IEnumerable<MvcCoreLinqXML.Models.Cliente>

@{
    ViewData["Title"] = "ListaClientes";
}

<h1>ListaClientes</h1>

<p>
    <a asp-action="Create" asp-controller="Clientes">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdCliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Direccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagen)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdCliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <img src="@item.Imagen" style="max-height:100px; max-width:100px"/>
            </td>
            <td>
                <a asp-controller="Clientes" asp-action="Details" asp-route-idcliente="@item.IdCliente" class="btn btn-sm btn-outline-info">Detalles</a> &nbsp;
                <a asp-controller="Clientes" asp-action="Editar" asp-route-idcliente="@item.IdCliente" class="btn btn-sm btn-outline-warning">Editar</a> &nbsp;
                <a asp-controller="Clientes" asp-action="Delete" asp-route-idcliente="@item.IdCliente" class="btn btn-sm btn-outline-danger">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
