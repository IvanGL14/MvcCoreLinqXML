@model IEnumerable<MvcCoreLinqXML.Models.Escenas>

@{
    ViewData["Title"] = "EscenasPelicula";
}

<h1>EscenasPelicula</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdPelicula)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Desripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagen)
            </th>
         
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdPelicula)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Desripcion)
            </td>
            <td>
                <img src="@item.Imagen" style="max-height:200px ; max-width:150px;" class="img-fluid" />
            </td>
            
        </tr>
}
    </tbody>
</table>

